        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="style_title" parent="TextView_14_gray">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_home_title</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/middle</item>
        <item name="android:textCursorDrawable">@drawable/curson</item>
        <item name="android:textColorHint">@color/divider</item>
        <item name="android:textColor">@color/colorTextSecond</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/text_home_content</item>
