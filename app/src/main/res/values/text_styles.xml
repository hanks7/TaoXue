<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView_single_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxEms">15</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView_14_wrap" parent="TextView_single_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/middle</item>
        <item name="android:textCursorDrawable">@drawable/curson</item>
        <item name="android:textColorHint">@color/divider</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="style_home_tag_text" parent="TextView_single_line">
        <item name="android:layout_width">wrap_content</item>
