<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_guanzhu_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
   <TextView
       android:id="@+id/tv_guanzhu_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:text="zxczx"
       android:layout_marginLeft="10dp"
       app:layout_constraintBottom_toTopOf="@+id/rv_guanzhu_info"
       app:layout_constraintLeft_toRightOf="@+id/iv_guanzhu_head"
       />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_guanzhu_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_guanzhu_head"
        >
    </android.support.v7.widget.RecyclerView>



</android.support.constraint.ConstraintLayout>
