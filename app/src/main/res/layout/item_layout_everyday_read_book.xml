<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/lsv_erb_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/image_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_margin">

        <TextView
            android:id="@+id/lsv_erb_tv_title"
            style="@style/TextView_14_wrap"
            android:textColor="@color/c333333"
            android:text="love and library" />

        <TextView
            android:textColor="@color/c999999"
            android:id="@+id/lsv_erb_tv_content"
            style="@style/TextView_12_wrap"
            android:layout_marginTop="7dp"
            android:lines="2"
            android:text="TextView_16_wrapTextView" />

        <TextView
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:gravity="center"
            android:id="@+id/lsv_erb_btn_read"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_normal_button"
            android:text="@string/read_book"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>