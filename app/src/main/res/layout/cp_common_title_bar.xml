<?xml version="1.0" encoding="utf-8"?>
<com.taoxue.ui.view.TopBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TopBar"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbar_height"
            android:background="@color/white">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/topbar_height"
                android:layout_height="@dimen/topbar_height"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scaleType="center"
                android:src="@mipmap/cp_ic_back"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/back"
                android:layout_toRightOf="@+id/back">

                <include layout="@layout/include_linearlayout_title_bar" />
            </LinearLayout>

        </RelativeLayout>

        <View style="@style/dividing_line" />

    </LinearLayout>
</com.taoxue.ui.view.TopBar>

