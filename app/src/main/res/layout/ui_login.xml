<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.taoxue.ui.view.TopBar
        android:id="@+id/topbar"
        style="@style/TopBar"
        app:bar_right_tv="注册"
        app:title="登录" >
    </com.taoxue.ui.view.TopBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
    <LinearLayout
        style="@style/login_ll"
        >

        <ImageView
            style="@style/login_icon_left"
            android:src="@mipmap/icon_phone"
            android:id="@+id/imageView2" />

        <EditText
            android:id="@+id/login_name_Edt"
           style="@style/login_editText"
            android:hint="请输入手机号"
            />
    </LinearLayout>

            <LinearLayout
                style="@style/login_ll"
                >
                <ImageView
                    style="@style/login_icon_left"
                    android:src="@mipmap/icon_pw"
                    />
                <EditText
                    android:id="@+id/login_PW_Edt"
                    style="@style/login_editText"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:id="@+id/login_pw_visible_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/visible"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>


        <Button
            android:id="@+id/login_BTN"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/selector_default_button"
            android:text="登录"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/login_changepw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:text="忘记密码?"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="40dp"
            android:textSize="@dimen/default_text_small" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        >
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/fast_login"

       />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="快速登录"
                android:textColor="@color/cc"
                android:textSize="@dimen/content_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/text"
                android:background="@color/help_button_view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text"
                android:background="@color/help_button_view" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/login_reader_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/du_lib_Btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/duiclib"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="读者证"
                android:textSize="16sp"
                />

        </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginLeft="20dp"
      android:visibility="gone"
      >
        <ImageView
            android:id="@+id/QQlogin_Btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/login_qq"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:text="QQ"

          android:textSize="16sp"
          />

  </LinearLayout>

        <!--android:layout_marginLeft="20dp"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
        <ImageView
            android:id="@+id/Wxlogin_Btn"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@mipmap/login_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="微信"
            android:textSize="16sp"
            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
        </LinearLayout>
</LinearLayout>