<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.taoxue.ui.module.setting.SettingActivity">

    <com.taoxue.ui.view.TopBar
        android:id="@+id/setting_topbar"
        style="@style/TopBar"
        app:title="@string/setting" />

    <RelativeLayout
        android:gravity="center_vertical"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_icon02" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_push_message" />
        </LinearLayout>


        <com.taoxue.ui.view.zcw.togglebutton.ToggleButton
            android:id="@+id/setting_check_message_push"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            app:tbAsDefaultOn="false"
            />
    </RelativeLayout>

    <View style="@style/dividing_line" />

    <RelativeLayout
        style="@style/setting_layout_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_icon03" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_sound_switch" />
        </LinearLayout>



        <com.taoxue.ui.view.zcw.togglebutton.ToggleButton
            android:id="@+id/setting_check_audio"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            app:tbAsDefaultOn="false"
             />
    </RelativeLayout>

    <View style="@style/dividing_line" />

    <RelativeLayout
        android:gravity="center_vertical"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_icon04" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_automatic_update" />
        </LinearLayout>



        <com.taoxue.ui.view.zcw.togglebutton.ToggleButton
            android:id="@+id/setting_check_update"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            app:tbAsDefaultOn="false"
            />
    </RelativeLayout>

    <View style="@style/dividing_line_crude" />


    <RelativeLayout
        android:id="@+id/setting_rl_delete"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView2"
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_delete" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_clear_cache" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="1.73m" />

            <ImageView
                style="@style/home_icon_entry"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin" />

        </LinearLayout>


    </RelativeLayout>

    <View style="@style/dividing_line" />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_rl_use_guide"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_icon05" />

            <TextView
                android:id="@+id/setting_textView3"
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_use_guide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                style="@style/home_icon_entry"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_rl_common_problem"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/setting_icon06" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_common_problem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/home_icon_entry"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/setting_rl_about_us"
        style="@style/setting_layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_icon_height"
                android:layout_height="@dimen/default_icon_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_margin_large"
                android:src="@mipmap/icon_launcher" />

            <TextView
                style="@style/TextView_12_wrap"
                android:layout_gravity="center"
                android:text="@string/setting_check_update" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="正式版本：1.0.2" />

            <ImageView

                style="@style/home_icon_entry"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />

        </LinearLayout>


    </RelativeLayout>

    <View style="@style/dividing_line" />
    <RelativeLayout
        android:id="@+id/update_pw"
        style="@style/layout_padding"
        >

        <TextView
            style="@style/TextView_12_wrap"
            android:text="修改密码 " />


        <ImageView
            android:id="@+id/ac_my_textView13"
            style="@style/home_icon_entry"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View style="@style/dividing_line" />

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="44dp"
        android:background="@drawable/selector_default_button"
        android:text="退出登录"
        android:textColor="@color/white" />

</LinearLayout>
