<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classification_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_fa_home_gv_new_3_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_heightPercent="100%w"
        tools:src="@mipmap/default_bg" />

    <TextView
        android:id="@+id/item_fa_home_gv_new_3_tv_title"
        style="@style/style_title"
        android:maxEms="7"
        android:textColor="@color/c333333"
        android:maxLines="1"
        android:padding="3dp"
        tools:text="发时代峰峻看人家撒地方可能" />
    <TextView
        android:id="@+id/item_fa_home_gv_new_3_tv_content"
        style="@style/style_title"
        android:maxEms="7"
        android:textColor="@color/c999999"
        android:maxLines="1"
        android:padding="3dp"
        tools:text="发时代峰峻看人家撒地方可能" />


</com.zhy.android.percent.support.PercentLinearLayout>
