<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.taoxue.ui.view.TopBar
            android:id="@+id/toolbar_title"
            style="@style/TopBar"
            app:is_has_back="false"
            app:title="阅+" />
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
         <TextView
            android:id="@+id/reader_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="读者"
            android:textColor="@color/c333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/read_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="是10月25日"
            android:textColor="@color/c999999"
            android:layout_marginBottom="20dp"
            />
        <View
            style="@style/dividing_line"></View>
                </LinearLayout>
            </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/read_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></android.support.design.widget.TabLayout>
        <View
           style="@style/dividing_line"></View>
        </android.support.design.widget.AppBarLayout>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v4.view.ViewPager
            android:id="@+id/read_tab_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v4.view.ViewPager>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
        <!--<TextView-->
        <!--android:id="@+id/special"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/home_nav_height"-->
        <!--android:gravity="center"-->
        <!--style="@style/TopBar"-->
        <!--android:textSize="@dimen/subtitle_text"-->
        <!--android:text="@string/zhuanti"/>-->
        <!--<ListView-->
        <!--android:id="@+id/special_lv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--</ListView>-->
    </LinearLayout>
</FrameLayout>
