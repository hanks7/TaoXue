<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.taoxue.ui.view.TopBar
        android:id="@+id/top_bar"
        style="@style/TopBar"
        app:title="搜索结果" />

    <LinearLayout
        android:id="@+id/pop_cilck_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/topbar_height"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/topbar_height"
                android:layout_height="@dimen/topbar_height"
                android:padding="15dp"
                android:src="@drawable/ic_pop_sort_menu" />

            <TextView
                android:id="@+id/pop_click_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_launcher"
                android:text="综合排序"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/pop_click_iv_jiantou"
                android:layout_width="@dimen/topbar_height"
                android:layout_height="@dimen/topbar_height"
                android:padding="16dp"
                android:src="@mipmap/ic_pop_sort_arrow_down" />
        </LinearLayout>

        <View style="@style/dividing_line" />
    </LinearLayout>

    <com.taoxue.ui.view.ListRefeshMoreView
        android:id="@+id/ListRefeshMoreView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
