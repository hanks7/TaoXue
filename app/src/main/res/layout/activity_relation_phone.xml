<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.taoxue.ui.module.login.RelationReaderCardActivity">
    <com.taoxue.ui.view.TopBar
        android:id="@+id/topbar"
        style="@style/TopBar"
        app:title="关联手机号" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_top_height">
            <TextView
                android:id="@+id/relphone_skip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/content_text"
                android:text="@string/tiaoguo"/>
        </RelativeLayout>
    </com.taoxue.ui.view.TopBar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="读者,(微信昵称)"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="为了更好的给您提供服务，请关联您的手机号"/>

    <LinearLayout
        style="@style/login_ll"
        >

        <ImageView
            style="@style/login_icon_left"
            android:src="@mipmap/icon_phone"
          />

        <EditText
            android:id="@+id/relphone_name_Edt"
            style="@style/login_editText"
            android:hint="请输入手机号"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/login_ll"
        >
        <ImageView
            style="@style/login_icon_left"
            android:src="@mipmap/icon_pw"
            />
        <EditText
            android:id="@+id/relphone_PW_Edt"
            style="@style/login_editText"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />
        <ImageView
            android:id="@+id/relphone_pw_visible_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/visible"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        >
    <LinearLayout
        style="@style/login_ll_code"
        android:layout_width="0dp"
        android:layout_weight="1"
        >
        <ImageView
            style="@style/login_icon_left"
            android:src="@mipmap/icon_code"
            />
        <EditText
            android:id="@+id/relphone_phone_code_Edt"
            style="@style/login_editText"
            android:hint="请输入验证码"
            />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/selector_register_sure" >
            <TextView
                android:id="@+id/relphone_codeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="获取验证码" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/relphone_BTN"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_default_button"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>
